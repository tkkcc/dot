#!/bin/bash
stdbuf -oL -- udevadm monitor --udev -s block | while read -r -- _ _ event devpath _; do
if [ "$event" = add ]; then
    a=$(udevadm info -p /sys/"$devpath")
    t=$(awk -v FS== '/ID_FS_TYPE/ {print $2}' <<< $a)
    n=$(awk -v FS== '/DEVNAME/ {print $2}' <<< $a)
    p=$H/${n##*/}
    mou "$n" "$p" "$t"
fi
done
